{
    "name": "api_node_boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate for an ideal restfull api project with Node.js",
    "main": "index.js",
    "scripts": {
        "test": "./node_modules/.bin/mocha src/api/tests/**/*.spec.js --require node_modules/@babel/register",
        "start": "nodenv ./dist/api/server.js",
        "dev": "nodenv -e nodemon -- --exec",
        "build": "babel ./src -d ./dist --source-maps",
        "lint": "./node_modules/.bin/eslint src/**",
        "watch": "/node_modules/.bin/mocha src/api/tests/**/*.spec.js --require node_modules/@babel/register --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ViniciusSabino/api_node_boilerplate.git"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "nodemonConfig": {
        "exec": "babel-node ./src/api/server.js"
    },
    "keywords": [
        "boilerplate",
        "api",
        "node.js",
        "koa",
        "babel",
        "es6",
        "js"
    ],
    "author": "Vin√≠cius Rocha <vnc.chelsea@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ViniciusSabino/api_node_boilerplate/issues"
    },
    "homepage": "https://github.com/ViniciusSabino/api_node_boilerplate#readme",
    "dependencies": {
        "chalk": "^2.4.2",
        "kcors": "^2.2.2",
        "koa": "^2.7.0",
        "koa-bodyparser": "^4.2.1",
        "koa-compose": "^4.1.0",
        "koa-joi-router": "^5.2.0",
        "koa-logger": "^3.2.0",
        "koa-respond": "^2.1.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.3.4",
        "@babel/node": "^7.2.2",
        "@babel/plugin-proposal-do-expressions": "^7.2.0",
        "@babel/plugin-proposal-optional-chaining": "^7.2.0",
        "@babel/plugin-proposal-pipeline-operator": "^7.3.2",
        "@babel/preset-env": "^7.3.4",
        "@babel/register": "^7.0.0",
        "babel-eslint": "^10.0.1",
        "chai": "^4.2.0",
        "dotenv": "^6.2.0",
        "eslint": "^5.15.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-prettier": "^3.0.1",
        "husky": "^1.3.1",
        "mocha": "^6.0.2",
        "node-env-run": "^3.0.2",
        "nodemon": "^1.18.10",
        "prettier": "^1.16.4",
        "pretty-quick": "^1.10.0"
    }
}
